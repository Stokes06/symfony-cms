{% extends "@App/User/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <p class="alert alert-success">{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
    {% if targetUrl %}
    <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
    {% endif %}
{% endblock %}
